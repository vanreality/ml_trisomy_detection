params {
    input              = null
    reference          = null
    threshold          = null
    outdir             = null
    dmr_bed            = null
    chr                = 'chr16'
    format             = 'pdf'
}

process {
    executor = 'slurm'

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: 'copy',
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: 'EXTRACT_BAM' {
        container  = "${baseDir}/images/common_tools.sif"
        cpus       = 8
        memory     = 16.GB
        time       = 2.h
        queue      = 'cn-long'
    }

    withName: 'SAMTOOLS_.*' {
        container  = "${baseDir}/images/common_tools.sif"
        cpus       = 8
        memory     = 16.GB
        time       = 2.h
        queue      = 'cn-long'
    }

    withName: 'METHYLDACKEL_EXTRACT_.*' {
        container  = "${baseDir}/images/methyldackel.sif"
        cpus       = 8
        memory     = 16.GB
        time       = 2.h
        queue      = 'cn-long'
        ext.args   = '-p 10 -q 10 --mergeContext'
    }

    withName: 'EXTRACT_ATTENTION_METHYLATION' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 32
        memory    = 64.GB
        time      = 2.h
        queue     = 'cn-long'
    }

    withName: 'GENERATE_METHYLATION_MATRIX_.*' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 8
        memory    = 16.GB
        time      = 2.h
        queue     = 'cn-long'
    }

    withName: 'PLOT_HEATMAP_.*' {
        container = "${baseDir}/images/common_tools.sif"
        cpus      = 8
        memory    = 16.GB
        time      = 2.h
        queue     = 'cn-long'
    }
}

profiles {
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        singularity.runOptions = "-B /lustre1,/lustre2"
    }
}

manifest {
    author = 'vanreality'
    name = 'ml_trisomy_detection'
    description = ''
    version = 'dev1.0'
}